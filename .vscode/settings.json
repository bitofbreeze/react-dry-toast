{
	"npm.packageManager": "npm",
	"editor.formatOnSave": true,
	"editor.codeActionsOnSave": {
		"quickfix.biome": "explicit",
		"source.organizeImports.biome": "explicit"
	},
	"editor.tabSize": 2,
	"editor.defaultFormatter": "biomejs.biome",
	"[css]": {
		"editor.defaultFormatter": "vscode.css-language-features"
	},
	"tailwindCSS.classAttributes": ["class", "className", "tw"],
	"files.associations": {
		"*.css": "tailwindcss"
		// This disables features like markdown preview
		// "*.md": "markdoc"
	},
	"cssVariables.languages": [
		"astro",
		"svelte",
		"vue",
		"vue-html",
		"vue-postcss",
		"scss",
		"postcss",
		"less",
		"css",
		"html",
		"javascript",
		"javascriptreact",
		// "typescript",
		// Adds it for normal objects
		// "typescriptreact",
		"source.css.styled",
		"tailwindcss"
	],
	"cssVariables.lookupFiles": [
		"**/*.css",
		"**/*.scss",
		"**/*.sass",
		"**/*.less",
		// Doesn't work with index.css
		"node_modules/tailwindcss/theme.css"
	],
	"[markdown]": {
		"editor.defaultFormatter": "yzhang.markdown-all-in-one"
	},
	"cSpell.words": [
		"arethetypeswrong",
		"arktype",
		"attw",
		"biomejs",
		"clipboardy",
		"deepmerge",
		"embedder",
		"fastify",
		"Gitsell",
		"hnsw",
		"Hola",
		"isbot",
		"Konnichi",
		"libsql",
		"Markdoc",
		"miniflare",
		"Namecheap",
		"nppes",
		"overscroll",
		"papaparse",
		"partykit",
		"partysocket",
		"plpy",
		"plpython",
		"precomputation",
		"Renderable",
		"revalidator",
		"shiki",
		"sindresorhus",
		"sitekey",
		"spritesheet",
		"stylesheet",
		"syncpack",
		"tailwindcss",
		"totp",
		"Turso",
		"typegen",
		"unlisting",
		"unrecoverably",
		"unsuspended",
		"unsuspending",
		"Visx",
		"workerd",
		"workerpool"
	],
	"rainbow_csv.highlight_rows": true,
	"typescript.tsdk": "node_modules/typescript/lib"
}
